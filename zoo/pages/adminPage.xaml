<Page x:Class="zoo.pages.adminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zoo.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="adminPage">

    <Grid>
        <StackPanel Width="180" Height="195">
            <Label Name="welcome" Content="Добро пожаловать, Админ" HorizontalAlignment="Center"/>
            <Button Name="emp" Width="150" Height="30" Margin="5" Content="Список сотрудников" Click="Button_Click"/>
            <Button Name="anim" Width="150" Height="30" Margin="5" Content="Список животных" Click="Button_Click_1"/>
            <Button Name="time" Width="150" Height="30" Margin="5" Content="Расписание" Click="Button_Click_2"/>
            <Button Name="food" Width="150" Height="30" Margin="5" Content="Поставщики кормов" Click="Button_Click_3"/>
        </StackPanel>
    </Grid>
</Page>
