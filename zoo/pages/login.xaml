<Page x:Class="zoo.pages.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zoo.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid>
        <StackPanel VerticalAlignment="Center" Width="200" Height="250" >
            <Label Content="Авторизация" HorizontalAlignment="Center"/>
            <Label Content="Логин" HorizontalAlignment="Center"/>
            <TextBox Name="log" TextAlignment="Center" HorizontalAlignment="Center" Width="180" Height="30" Margin="10" />
            <Label Content="Пароль" HorizontalAlignment="Center"/>
            <PasswordBox Name="pass" Height="30" Width="180" PasswordChar="*" HorizontalContentAlignment="Center"/>
            <Button Content="Вход" Width="100" Height="25" Margin="20" Click="Button_Click"/>
            <Label Name="wrong" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
